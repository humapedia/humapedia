# Humapedia Environment Configuration

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/humapedia"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# API Keys
GOOGLE_API_KEY="your-google-api-key"
OPENAI_API_KEY="your-openai-api-key"

# External Services
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Analytics
GOOGLE_ANALYTICS_ID="your-ga-id"
GOOGLE_TAG_MANAGER_ID="your-gtm-id"

# Email
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# CDN
CDN_URL="https://cdn.humapedia.org"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_COMMUNITY_CONTRIBUTIONS="true"
ENABLE_MULTILINGUAL="true" 